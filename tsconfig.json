{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}